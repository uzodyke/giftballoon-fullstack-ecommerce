  </section>

  <!-- Related Links -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 text-center mb-8">
        Helpful Resources
      </h2>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <a
          href="/shop"
          class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow text-center"
        >
          <div class="text-4xl mb-4">üõí</div>
          <h3 class="text-lg font-bold text-gray-900 mb-2">Start Customizing</h3>
          <p class="text-gray-600 text-sm">Create your personalised balloon now</p>
        </a>

        <a
          href="/services/weddings"
          class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow text-center"
